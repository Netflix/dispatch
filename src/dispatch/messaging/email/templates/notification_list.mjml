{% extends 'templates/base.mjml' %}
{% block description %}
<mj-section>
  <mj-column>
    <mj-text>
      {{ description }}
    </mj-text>
  </mj-column>
</mj-section>
{% endblock %}

{% block items %}
{% for item in items %}
<mj-section>
  <mj-column>
    {% for row in item %}
    {% if row.title_link %}
    <mj-text>
      <a href="{{ row.title_link }}" target="_blank" rel="noopener noreferrer">{{ row.title }}</a>
    </mj-text>
    {% elif row.datetime %}
    <mj-text>
      {{ row.title }}
    </mj-text>
    <mj-text>
      {{ row.datetime | datetime }}
    </mj-text>
    {% else %}
    <mj-text>
      {{ row.title }}
    </mj-text>
    <mj-text>
      {{ row.text }}
    </mj-text>
    {% endif %}
    <mj-divider />
    {% endfor %}
  </mj-column>
</mj-section>
{% endfor %}
{% endblock %}
